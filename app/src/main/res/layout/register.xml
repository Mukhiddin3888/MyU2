<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <TextView
        android:id="@+id/txv_lets_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Let's create your account"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lnl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txv_lets_create"
        android:weightSum="2">


        <EditText
            android:id="@+id/edt_name"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:background="@drawable/btn_back_empty"
            android:layout_marginEnd="4dp"
            android:hint="First Name"
            android:paddingStart="4dp"
            android:maxLines="1"
            android:inputType="textPersonName"

            />


        <EditText
            android:id="@+id/edt_lastName"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:background="@drawable/btn_back_empty"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:hint="Last Name"
            android:paddingStart="4dp"
            android:maxLines="1"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txv_phone_num"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@id/lnl_info"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_back_empty"
        android:gravity="center"
        android:text=""
        android:textColor="@color/secondary_black"
        >
    </TextView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_back_empty"
        android:backgroundTint="@color/second_yellow"
        android:text="Submit"
        android:textColor="@color/secondary_black"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>